@model List<LibraryMVC.Models.LibraryBookReturnListSP_Result >
@{
    ViewBag.Title = "Book Return List";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Return", null, FormMethod.Post))
{
    <h4 Style="text-align: right; font-family: Corbel; font-size: large;">BOOK RETURN - LIST</h4>
    <hr />
    <table style="width:100%">
        <tr>
            <td colspan="2">
                <input type="text" id="txtSearch" placeholder="Type here to search..." style="width:100%" class="TextBoxTDBG4" onkeyup="Search()" />
                <br />
            </td>
        </tr>
        <tr>
            <td>
                <div id="divPartialView">
                    @Html.Partial("~/Views/Return/ReturnList.cshtml", Model);
                </div>
            </td>
        </tr>
    </table>
    <script type="text/javascript" >
        function Search()
        {
            var searchval = $("#txtSearch").val();
            $.ajax({ type: "POST", url: "/Return/SearchGrid", data: { searchText: searchval }, datatype: "html", success: function (data) { $("#divPartialView").html(data); } });
        }
    </script>
    <div class="form-group ">
        <div style="text-align: left">
            <input type="submit" name="action:Add" value="Return a book" class="btn btn-success " />
        </div>
    </div>
}

