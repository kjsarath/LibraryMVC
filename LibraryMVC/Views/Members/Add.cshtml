@model LibraryMVC.Models.LibraryMemberDetailsSP_Result 
@{
    ViewBag.Title = "Add Member";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<h2></h2>
@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
    <script type="text/javascript">
     $(document).ready(function () {
         $('input[type=datetime]').datepicker({
             dateFormat: "dd/M/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-60:+0"
         });

     });
    </script>

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="font-family:Calibri ;font-size:10px">
        <table style="width:100%;">
            <tr>
                <td colspan="4" Style="text-align: right; font-family: Corbel; font-size: large;">
                    ADD MEMBER - DETAILS
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.AccountID)
                </td>
            </tr>
            <tr>
                <td colspan="4" class="SubHead">BOOK DETAILS</td>
            </tr>
            <tr>
                <td class="tdStyle2" style="width:10%">Code</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                </td>
                <td style="width:10%"></td>
                <td style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span15"></span>
                </td>
            </tr>
            <tr>
                <td class="tdStyle2" style="width:10%; height: 24px;">Name</td>
                <td colspan="3" style="height: 24px;width: 40%" class="TextBoxTDBG3">
                    @Html.EditorFor(model => model.Name , new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td class="tdStyle2" style="width:10%">Category</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span2"></span>
                    @{
                        var catlistItems = new List<SelectListItem >
                        {
                              new SelectListItem { Text = "Member", Value = "Member" },
                              new SelectListItem { Text = "Staff", Value = "Staff" },
                              new SelectListItem { Text = "Student", Value = "Student" }
                        };
                    }
                    @Html.DropDownListFor(model => model.Category , catlistItems, new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                </td>
                <td class="tdStyle2" style="width:10%">Date of Join</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span3"></span>
                    @Html.EditorFor(model => model.JoiningDate , new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.JoiningDate, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td class="tdStyle2" style="width:10%">Status</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span3"></span>
                    @{
                        var statuslistItems = new List<SelectListItem>
                        {
                              new SelectListItem { Text = "Active", Value = "Active" },
                              new SelectListItem { Text = "Inactive", Value = "Inactive" }
                        };
                    }
                    @Html.DropDownListFor(model => model.Status ,statuslistItems, new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </td>
                <td style="width:10%"></td>
                <td style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span15"></span>
                </td>
            </tr>
            <tr>
                <td class="tdStyle2" style="width:10%">Remarks</td>
                <td colspan="3" class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span4"></span>
                    @Html.EditorFor(model => model.Remarks , new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td colspan="4" class="SubHead">CONTACT DETAILS</td>
            </tr>
            <tr>
                <td class="tdStyle2" style="width:10%">Mobile</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span5"></span>
                    @Html.EditorFor(model => model.ContactNum , new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.ContactNum, "", new { @class = "text-danger" })
                </td>

                <td class="tdStyle2" style="width:10%">Mobile Alt</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span6"></span>
                    @Html.EditorFor(model => model.ContactNumAlt , new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.ContactNumAlt, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td class="tdStyle2" style="width:10%">EMail</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span7"></span>
                    @Html.EditorFor(model => model.ContactEmail , new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.ContactEmail, "", new { @class = "text-danger" })
                </td>
                <td style="width:10%"></td>
                <td style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span15"></span>
                </td>
            </tr>
            <tr>
                <td class="tdStyle2" style="width:10%">Address 1</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span9"></span>
                    @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
                </td>

                <td class="tdStyle2" style="width:10%">Address 2</td>
                <td class="TextBoxTDBG3" style="width: 40%">
                    <span class="dxeBase_DevEx" id="Span10"></span>
                    @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "TextBoxTDBG4" } })
                    @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
    </div>

    <br />
    <form method="post" >
        <div class="form-group">
            <div style="text-align: left">
                <input type="submit" name="action:Save" value="Save" class="btn btn-success " />
                <input type="submit" name="action:Back" value="Cancel" class="btn btn-danger" />
            </div>
        </div>
        <div style="text-align: left">
            <input type="submit" name="action:Back" value="Back To List" class="btn btn-primary " />
        </div>
    </form>
                        }
