    <script>
        $.ajax({
            type: "POST",
            url: "/Main/Chart1",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function(mems)
            {
                var aData = mems;
                var aLabels = aData[0];
                var aDatasets1 = aData[1];
                var aDatasets2 = aData[2];
                var dataT = {
                    labels: aLabels,
                    datasets: [{
                        label: "Issues",
                        data: aDatasets1,
                        pointBackgroundColor: "rgba(98, 194, 228,0.4)",
                        pointHoverBorderColor: "rgba(98, 194, 228,0.2)",
                        pointBorderColor: "rgba(102, 154, 225,0.2)",
                        pointHoverBackgroundColor: "rgba(102, 154, 225,0.4)",
                        backgroundColor: "rgba(98, 194, 228,0.4)",
                        borderWidth: 1,
                        //backgroundColor: ["#62c2e4", "#669ae1"]
                    },
                    {
                        label: "Returns",
                        data: aDatasets2,
                        pointBackgroundColor: "rgba(196, 156, 222,0.4)",
                        pointHoverBorderColor: "rgba(196, 156, 222,0.2)",
                        pointBorderColor: "rgba(219, 157, 190,0.2)",
                        pointHoverBackgroundColor: "rgba(219, 157, 190,0.4)",
                        backgroundColor: "rgba(196, 156, 222,0.4)",
                        borderWidth: 1,
                        //backgroundColor: ["#c49cde", "#db9dbe"]
                    }]
                };
                var ctx = $("#myChart").get(0).getContext('2d');
                var chart = new Chart(ctx, {
                    type: 'line',
                    data: dataT,
                    options: {bezierCurve: false},
                    borderWidth: 1,

                });
            }
        });

        $.ajax({
            type: "POST",
            url: "/Main/Chart2",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function(mems)
            {
                var aData = mems;
                var aLabels = aData[0];
                var aDatasets1 = aData[1];
                var dataT = {
                    labels: aLabels,
                    datasets: [{
                        label: "Issues",
                        data: aDatasets1,
                        backgroundColor: ["rgba(98, 194, 228,0.4)", "rgba(196, 156, 222,0.4)"]
                    }]
                };
                var ctx = $("#myChart2").get(0).getContext("2d");
                var myPieChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: dataT,
                    options: {
                        responsive: false,
